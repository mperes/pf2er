mixin modal-free-actions()
  +modal({title: "free actions", search: true, cssClasses: ["compendium-modal", "free-actions-modal"]})
    +tabbed-content("modal", {cssClasses:["tabbed-content--main", "tabbed-content--highlight-first-child"]})
      +tabbed-content__tab("modal", {title: "all", counter: 18})
        +simple-list()
          +compendium-custom-free-action-list--asc()
          +compendium-default-free-action-list()
      +tabbed-content__tab("modal", {title: "default", counter: 15})
        +simple-list()        
          +compendium-default-free-action-list()
      +tabbed-content__tab("modal", {title: "custom", counter: 3})
        +add-custom({cta: "create custom free-action"})
          +form()
            +layout({style: "grid", cssClasses:["layout--cols--1fr-1fr", "layout--gap--half"]})
              label.form__field
                span.title name
                input(type="text" name="custom-free-action-name" autocomplete="off")
              +layout({style: "grid", cssClasses:["layout--cols--1fr-1fr-1fr", "layout--gap--half"]})
                label.form__field
                  span.title limited uses
                  select(name="custom-free-action-trackusage")
                    option(value="no") No
                    option(value="yes") Yes
                label.form__field.form__field--disabled.track-max-usages
                  span.title max usages
                  input(type="text" name="custom-free-action-trackusage-max" autocomplete="off", disabled)
                label.form__field.form__field--disabled.track-period
                  span.title period
                  input(type="text" name="custom-free-action-trackusage-max" autocomplete="off" placeholder="Per Day", disabled)
            label.form__field
              span.title description
              textarea(name="custom-free-action-description" rows="3")
            .form__free-actions
              .button-group.form__free-action.form__free-action--negative
                button.button-group__button.add-custom__delete
                  span delete
              .button-group.form__free-action.form__free-action--primary
                button.button-group__button.add-custom__done
                  span done
        +simple-list({cssClasses:["custom-free-actions"]})
          +compendium-custom-free-action-list()